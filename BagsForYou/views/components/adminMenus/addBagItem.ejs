<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/default-styling.css">
    <link rel="stylesheet" href="/css/admin-styling.css">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,1,0" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

</head>

<body>
    <%- include('../navigation/header-admin') %>

        <div class="main-grid-section">
            <div class="left-column">
                <div class="main-menu">
                    <div class="add-bag-entry">
                        <form action="/addBagEntry" method="post">
                            <label for="bag-name">Bag Name:</label>
                            <input type="text" id="bag-name" name="bag-name">

                            <label for="category">Category:</label>
                            <select id="category" name="category">
                                <option value="">--Please choose an option--</option>
                                <option value="clutch">Clutch</option>
                                <option value="shoulder-bag">Shoulder Bag</option>
                                <option value="crossbody">Crossbody</option>
                                <option value="tote">Tote</option>
                                <option value="hobo">Hobo</option>
                                <option value="satchel">Satchel</option>
                                <option value="backpack">Backpack</option>
                                <option value="bucket-bag">Bucket Bag</option>
                                <option value="envelope-bag">Envelope Bag</option>
                                <option value="wristlet">Wristlet</option>
                            </select>

                            <label for="subcategory">Subcategory:</label>
                            <select id="subcategory" name="subcategory">
                                <option value="">--Please choose an option--</option>
                                <option value="leather">Leather</option>
                                <option value="canvas">Canvas</option>
                                <option value="suede">Suede</option>
                                <option value="nylon">Nylon</option>
                                <option value="straw">Straw</option>
                            </select>

                            <label for="color">Color:</label>
                            <input type="text" id="color" name="color">

                            <label for="bag-designer">Bag Designer:</label>
                            <input type="text" id="bag-designer" name="bag-designer">

                            <label for="bag-brand">Bag Brand:</label>
                            <input type="text" id="bag-brand" name="bag-brand">

                            <label for="bag-description">Bag Description:</label>
                            <textarea id="bag-description" name="bag-description"></textarea>

                            <label for=bag-dimensions>Bag Dimensions (WxLxH):</label>
                            <input type=number" id=width" name=width">
                            <input type=number" id=length" name=length">
                            <input type=number" id=height" name=height">

                            <label for=bag-image>Bag Image (only accept png or jpg):</label>
                            <input type=file" accept=".png,.jpg" id=bag-image" name=bag-image">

                            <input type=submit" value=Submit">
                        </form>
                    </div>
                </div>
                <div class="secondary-menu">
                    <%- include('components/adminMenus/stat-all') %>
                </div>
            </div>
            <div class="right-column">
                <%- include('components/adminMenus/recentBags') %>
            </div>
        </div>
</body>

</html>